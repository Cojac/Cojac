			<artifactId>benchmark-utils</artifactId>
			<version>1.0</version>
			<scope>system</scope>
			<systemPath>${basedir}/benchmark-utils/benchmark-utils.jar</systemPath>
		</dependency>

		<dependency>
			<groupId>com.wicht.benchmark.utils</groupId>
			<artifactId>jcommon</artifactId>
			<version>1.0</version>
			<scope>system</scope>
			<systemPath>${project.basedir}/benchmark-utils/jcommon-1.0.16.jar</systemPath>
		</dependency>

		<dependency>
			<groupId>com.wicht.benchmark.utils</groupId>
			<artifactId>jfreechart</artifactId>
			<version>1.0</version>
			<scope>system</scope>
			<systemPath>${basedir}/benchmark-utils/jfreechart-1.0.13.jar</systemPath>
		</dependency>

		<dependency>
			<groupId>com.wicht.benchmark.utils</groupId>
			<artifactId>jsci-core</artifactId>
			<version>1.0</version>
			<scope>system</scope>
			<systemPath>${basedir}/benchmark-utils/jsci-core.jar</systemPath>
		</dependency>

		<dependency>
			<groupId>com.wicht.benchmark.utils</groupId>
			<artifactId>mt-13.jar</artifactId>
			<version>1.0</version>
			<scope>system</scope>
			<systemPath>${basedir}/benchmark-utils/mt-13.jar</systemPath>
		</dependency>

		<dependency>
			<groupId>org.ow2.asm</groupId>
			<artifactId>asm</artifactId>
			<version>7.2</version>
		</dependency>
		<dependency>
			<groupId>org.ow2.asm</groupId>
			<artifactId>asm-commons</artifactId>
			<version>7.2</version>
		</dependency>
		<dependency>
			<groupId>org.ow2.asm</groupId>
			<artifactId>asm-tree</artifactId>
			<version>7.2</version>
		</dependency>
		<dependency>
			<groupId>org.ow2.asm</groupId>
			<artifactId>asm-analysis</artifactId>
			<version>7.2</version>
		</dependency>
        <dependency>
            <groupId>org.ow2.asm</groupId>
            <artifactId>asm-util</artifactId>
            <version>7.2</version>
        </dependency>

		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-math3</artifactId>
			<version>3.6.1</version>
		</dependency>
	</dependencies>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<repositories>
		<repository>
			<id>org.ow2.asm</id>
			<url>http://repository.ow2.org/nexus/</url>
		</repository>
	</repositories>
</project>
